<UserControl x:Class="Bau.Controls.Editors.MultiTypeEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bau.Controls.Editors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
		<TextBox x:Name="txtValue" Text="{Binding Path=Value,UpdateSourceTrigger=PropertyChanged}" />
		<DatePicker x:Name="dtmValue" SelectedDate="{Binding Path=Value,UpdateSourceTrigger=PropertyChanged}" />
		<CheckBox x:Name="chkValue" IsChecked="{Binding Path=Value,UpdateSourceTrigger=PropertyChanged}" />
	</StackPanel>
</UserControl>
